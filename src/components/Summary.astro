---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class='week-dropdown'>
  <button
    class='w-full flex items-center justify-between p-4 bg-white rounded-lg hover:bg-gray-50 transition-colors'
    aria-expanded='false'
  >
    <h3 class='text-xl font-semibold text-primary'>{title}</h3>
    <svg
      class='w-6 h-6 transform transition-transform duration-300'
      fill='none'
      stroke='currentColor'
      viewBox='0 0 24 24'
    >
      <path
        stroke-linecap='round'
        stroke-linejoin='round'
        stroke-width='2'
        d='M19 9l-7 7-7-7'></path>
    </svg>
  </button>
  <div class='content overflow-hidden transition-all duration-300 max-h-0'>
    <div class='p-4 rounded-b-lg'>
      <slot />
    </div>
  </div>
</div>

<style>
  .week-dropdown button[aria-expanded="true"] svg {
    transform: rotate(180deg);
  }

  .week-dropdown button {
    border: 1px solid #e5e7eb;
  }

  .week-dropdown button:hover {
    border-color: var(--color-primary);
  }

  .week-dropdown .content.expanded {
    max-height: 1000px;
  }
</style>

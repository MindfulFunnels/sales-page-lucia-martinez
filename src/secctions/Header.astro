---
import DecorativeCircle from "../components/DecorativeCircle.astro";
import IconCircle from "../components/IconCircle.astro";
import "../styles/animations.css";
import "../styles/fonts.css";
---

<section
  id='inicio'
  class='relative min-h-screen bg-background overflow-hidden'
>
  <!-- Elementos decorativos de fondo -->
  <div class='absolute inset-0 overflow-hidden'>
    <DecorativeCircle
      position='-top-40 -right-40'
      size='w-80 h-80'
      color='bg-light'
    />
    <DecorativeCircle
      position='top-0 -left-20'
      size='w-72 h-72'
      color='bg-accent'
      delay='animation-delay-2000'
    />
  </div>

  <!-- Contenido principal -->
  <div class='relative h-screen flex flex-col items-center justify-center px-4'>
    <div class='text-center max-w-3xl mx-auto'>
      <h1 class='title text-5xl md:text-7xl font-bold mb-6'>
        <span class='text-primary'>DESCUBRE EL</span><br />
        <span class='text-text'>PODER DEL</span><br />
        <span class='text-text'>YOGA</span>
      </h1>
      <p class='text-lg md:text-lg text-text mb-4'>
        Lucia Martinez Bienestar - Instructora de yoga, relajación y mindfulness
      </p>
      <div class='flex items-center justify-center'>
        <p
          class='text-sm lg:text-base italic text-secondary frase animate-typewriter text-center'
          style='width: 36ch; margin: 0 auto;'
        >
          "El yoga es la práctica de silenciar la mente."
        </p>
      </div>

      <!-- Botones de acción -->
      <div class='flex flex-col md:flex-row gap-4 justify-center mt-8'>
        <a href='#plan'>
          <button
            class='px-8 py-3 bg-primary text-white rounded-full hover:bg-secondary transition-all hover:shadow-lg transform hover:-translate-y-1'
          >
            <span class='text-base'>¿QUIERES SABER MÁS?</span>
          </button>
        </a>
      </div>

      <!-- Características destacadas -->
      <div class='mt-16 grid grid-cols-3 md:grid-cols-3 gap-8 text-center'>
        <IconCircle icon='energy'> Renueva tu energía </IconCircle>
        <IconCircle icon='heart'> Mejorar tu salud </IconCircle>
        <IconCircle icon='smile'> Mejora el ánimo </IconCircle>
      </div>
    </div>
  </div>
</section>

<style>
  @import url("https://fonts.googleapis.com/css2?family=League+Spartan:wght@700&family=Merienda:wght@300..900&display=swap");
  @import url("https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");
  .title {
    font-family: "Poppins", sans-serif;
    font-weight: 800;
    font-style: normal;
  }
  .frase {
    font-family: "Merienda", cursive;
  }
</style>
